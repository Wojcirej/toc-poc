{
  "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "jasmine": true
  },
  "parserOptions": {
      "ecmaVersion": 8
  },
  "extends": "eslint:recommended",
  "rules": {
      "max-len": [
          "error",
          120
      ],
      "indent": [
          "error",
          4
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "double"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}